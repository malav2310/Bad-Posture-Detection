{
  "manifest_version": 3,
  "name": "Posture Detective",
  "version": "1.0.0",
  "description": "AI-powered posture detection to keep your spine happy",
  "permissions": ["sidePanel", "activeTab", "scripting", "offscreen", "storage"],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}